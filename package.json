{
  "license": "MIT",
  "repository": "csstree/docs",
  "dependencies": {
    "@discoveryjs/discovery": "1.0.0-beta.2",
    "css-tree": "1.0.0-alpha.29"
  },
  "scripts": {
    "build": "node scripts/build.js && npm run discovery:build",
    "discovery": "discovery --model syntax",
    "discovery:build": "discovery-build --model syntax -o docs/new-syntax"
  },
  "discovery": {
    "models": {
      "syntax": "src/syntax/config.js"
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-duplicate-case": 2,
      "no-undef": 2,
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  },
  "devDependencies": {
    "resolve": "^1.5.0"
  }
}
